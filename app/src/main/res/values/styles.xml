<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkGrey</item>
        <item name="colorPrimaryVariant">@color/darkGrey</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="HomeSectionTitleTextView">
        <item name="android:textSize">@dimen/movies_home_section_title_size</item>
        <item name="fontFamily">@font/pt_sans_bold</item>
        <item name="android:padding">@dimen/movies_home_section_title_padding</item>
    </style>

    <style name="HomeMovieTitleTextView">
        <item name="android:textSize">@dimen/movies_home_movie_title_size</item>
        <item name="fontFamily">@font/pt_sans</item>
        <item name="android:padding">@dimen/movies_home_movie_title_padding</item>
    </style>

    <style name="HomeDetailTopTextStyle">
        <item name="android:textSize">@dimen/movies_detail_top_title_size</item>
        <item name="fontFamily">@font/pt_sans_bold</item>
        <item name="android:padding">@dimen/movies_detail_text_padding</item>
    </style>

    <style name="HomeDetailOverViewTextStyle">
        <item name="android:textSize">@dimen/movies_detail_overview_title_size</item>
        <item name="fontFamily">@font/pt_sans</item>
        <item name="android:padding">@dimen/movies_detail_text_padding</item>
    </style>

</resources>